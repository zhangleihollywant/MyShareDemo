<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.want.hotkidclub.myshareutildemo.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sina_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新浪登录"/>

        <Button
            android:id="@+id/qq_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qq登录"/>

        <Button
            android:id="@+id/wchat_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信登录"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sina_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微博分享"/>

        <Button
            android:id="@+id/qq_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qq分享"/>


        <Button
            android:id="@+id/qq_friend_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qq空间分享"/>


        <Button
            android:id="@+id/wchat_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信分享"/>

    </LinearLayout>


    <Button
        android:id="@+id/wchat_friend_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朋友圈分享"/>


    <TextView
        android:id="@+id/show_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/head_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"/>

</LinearLayout>
